#include <iostream>
#include <cmath>
using namespace std;
int main()
{
    int a, P;
    cout << "Specify the side of the square"; 
    cin >> a; //Вводим сторону треугольника
    P = a * 4; // Задаем переменную отвечающую за периметр
    cout << " perimeter of the square = " << P << "\n"; // Ответ
    return 0;
}
